# WinWin Travel Environment Variables
# Copy this file to .env and fill in the values

# --- APP CONFIGURATION ---
NODE_ENV=development
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# --- DATABASE (PostgreSQL) ---
# Direct connection for Prisma
DATABASE_URL="postgresql://user:password@localhost:5432/winwin"
# If using a connection pooling proxy (e.g. Supabase)
# SHADOW_DATABASE_URL=""

# --- CACHE (Redis) ---
REDIS_URL="redis://localhost:6379"

# --- AUTH (NextAuth.js) ---
NEXTAUTH_SECRET="your-secret-generated-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
GOOGLE_CLIENT_ID="xxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-xxx"

# --- AI & SEARCH ---
OPENAI_API_KEY="sk-xxx"
# Model selection (GPT-4 or GPT-3.5)
AI_MODEL_NAME="gpt-4"

# --- INTEGRATIONS (Hotel Providers) ---
HOTELBEDS_API_KEY="your-key"
HOTELBEDS_SECRET="your-secret"

# --- MONITORING ---
LOG_LEVEL="debug"
SENTRY_DSN=""
